
@{
    ViewData["Title"] = "Login";
}

<h1>Inicio de Sesión</h1>

<form action="@Url.Action("Login","Seguridad")" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Correo Electrónico</label>
        <input type="email" class="form-control" name="txtCorreo" id="txtCorreo" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="txtClave" name="txtClave">
    </div>

    <button type="submit" class="btn btn-primary">ENVIAR</button>
</form>

